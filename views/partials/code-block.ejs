<% if (user) { %>


<% snip.forEach(function(t) { %>
<div class="item">
    <div class="box">
        <form action="/snippets/<%= t.id %>?_method=DELETE" class="delete-form"
            method="POST">

            <button class="delete is-medium" id="delete-btn"
                href="/snippets/<%= t.id %>">
                </i></button>
        </form>
        <div class="snippet-info">
            <td>
                <p class="has-text-weight-bold">Syntax:</p><%= t.language %><br>
            </td>
            <td>
                <p class="has-text-weight-bold">Name:</p> <%= t.name %>
            </td>
        </div><br>
        <div class="code-block">
            <pre><code data-lang="<%= t.language %>"><%= t.snippet %></code></pre>

        </div>
    </div>
</div>
<% }) %>
<% } else { %>
<h1>Login to see Snippets</h1>
<% } %>